{
  "name": "furl-components",
  "version": "0.1.4-alpha",
  "description": "Functional react.js components. ",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chalarangelo/furl.git"
  },
  "keywords": [
    "furl",
    "react",
    "react-component",
    "component",
    "components",
    "ui",
    "ux",
    "framework",
    "frontend"
  ],
  "author": "Angelos Chalaris (chalarangelo@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Chalarangelo/furl/issues"
  },
  "homepage": "https://github.com/Chalarangelo/furl#readme",
  "dependencies": {
    "feather-icons": "^4.21.0",
    "react-text-mask": "^5.4.3",
    "react-timy": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "scripts": {
    "build-js": "NODE_ENV=production rollup -c",
    "build-css": "node-sass-chokidar ./src/styles/index.scss ./dist/index.css --output-style compressed",
    "build-packages": "npm-run-all build-js build-css",
    "watch-js": "NODE_ENV=production rollup -c -w",
    "watch-css": "npm run build-css && node-sass-chokidar ./src/styles/index.scss ./dist/index.css --watch --recursive --output-style compressed",
    "watch-all": "npm-run-all -p watch-js watch-css",
    "build-storybook": "build-storybook -c .storybook",
    "build-react": "react-scripts build",
    "build-docs": "npm-run-all -s build-css build-js build-react",
    "start-storybook": "start-storybook -p 9009 -c .storybook",
    "start-react": "react-scripts start",
    "start-docs": "npm-run-all -p watch-css watch-js start-react",
    "test": "NODE_ENV=test jest --coverage"
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "ie 11",
    "last 3 Android major versions",
    "last 3 ChromeAndroid major versions",
    "last 2 iOS major versions",
    "not op_mini all"
  ],
  "jest": {
    "setupTestFrameworkScriptFile": "jest-enzyme",
    "testEnvironment": "enzyme",
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.0",
    "@storybook/addon-links": "^5.0.0",
    "@storybook/addons": "^5.0.0",
    "@storybook/react": "^5.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^5.16.0",
    "eslint-config-semistandard-react": "^4.2.0",
    "eslint-plugin-semistandard-react": "^4.1.0",
    "feather-icons": "^4.21.0",
    "jest": "^24.8.0",
    "jest-environment-enzyme": "^7.0.2",
    "jest-enzyme": "^7.0.2",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.16.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8",
    "react-test-renderer": "^16.8.4",
    "react-text-mask": "^5.4.3",
    "rollup": "^1.5.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postprocess": "^1.0.2",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.4"
  }
}
