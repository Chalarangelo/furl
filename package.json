{
  "name": "react-component-library",
  "version": "0.1.0",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/bundle.js",
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "dependencies": {},
  "scripts": {
    "build-js": "NODE_ENV=production rollup -c",
    "build-css": "node-sass-chokidar ./src/styles/index.scss ./dist/styles/index.css --output-style compressed",
    "build-packages": "npm-run-all build-js build-css",
    "watch-js": "NODE_ENV=production rollup -c -w",
    "watch-css": "npm run build-css && node-sass-chokidar ./src/styles/index.scss ./dist/styles/index.css --watch --recursive",
    "watch-all": "npm-run-all -p watch-js watch-css",
    "test": "react-scripts test --env=jsdom --watchAll",
    "build-storybook": "build-storybook -c .storybook",
    "build-react": "react-scripts build",
    "build-docs": "npm-run-all -s build-css build-js build-react",
    "start-storybook": "start-storybook -p 9009 -c .storybook",
    "start-react": "react-scripts start",
    "start-docs": "npm-run-all -p watch-css watch-js start-react"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.0.0",
    "@storybook/addon-links": "^5.0.0",
    "@storybook/addons": "^5.0.0",
    "@storybook/react": "^5.0.0",
    "babel-loader": "^8.0.5",
    "feather-icons": "^4.21.0",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.16.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8",
    "react-test-renderer": "^16.8.4",
    "rollup": "^1.5.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.4"
  }
}
